# BSC DEX Integration Platform - Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://bsc_dex_user:YOUR_SECURE_PASSWORD@postgres:5432/bsc_dex
POSTGRES_DB=bsc_dex
POSTGRES_USER=bsc_dex_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_SESSION_URL=redis://:YOUR_SESSION_PASSWORD@redis-session:6379
REDIS_SESSION_PASSWORD=YOUR_SESSION_PASSWORD
REDIS_SESSION_PORT=6380

# Blockchain RPC Configuration
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_RPC_BACKUP=https://bsc-dataseed2.binance.org/
BSC_RPC_WS_URL=wss://bsc-ws-node.nariox.org:443
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com

# PancakeSwap Configuration
PANCAKESWAP_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E
PANCAKESWAP_FACTORY=0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73
PANCAKESWAP_INIT_CODE_HASH=0x00fb7f630766e6a796048ea87d01acd3068e8ff67d078148a3fa3f4a84f69bd5

# Third-party API Keys
WALLET_CONNECT_PROJECT_ID=YOUR_WALLET_CONNECT_PROJECT_ID
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY
MORALIS_API_KEY=YOUR_MORALIS_API_KEY
MORALIS_WEBHOOK_SECRET=YOUR_MORALIS_WEBHOOK_SECRET
ONE_INCH_API_KEY=YOUR_ONE_INCH_API_KEY
ONE_INCH_REFERRER_ADDRESS=YOUR_REFERRER_ADDRESS

# Security Configuration
JWT_SECRET=YOUR_JWT_SECRET_MINIMUM_32_CHARACTERS
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_MINIMUM_32_CHARACTERS
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_MINIMUM_32_CHARACTERS
SESSION_SECRET=YOUR_SESSION_SECRET_MINIMUM_32_CHARACTERS

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=10
UPLOAD_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DESTINATION=uploads/

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring and Observability
SENTRY_DSN=YOUR_SENTRY_DSN
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=YOUR_GRAFANA_PASSWORD
ELASTICSEARCH_PORT=9200

# Email Configuration (optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@bsc-dex.com
EMAIL_FROM_NAME=BSC DEX Platform

# Push Notifications
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY
VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY
VAPID_EMAIL=your-email@bsc-dex.com

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# Web3 Configuration
WEB3_TIMEOUT=30000
WEB3_RETRIES=3
WEB3_RETRY_DELAY=1000
MEV_PROTECTION_ENABLED=true
PRIVATE_POOL_ENABLED=true

# Trading Configuration
MAX_SLIPPAGE_PERCENTAGE=5
MIN_TRADE_AMOUNT=0.001
MAX_TRADE_AMOUNT=1000
DEFAULT_GAS_LIMIT=21000
GAS_PRICE_STRATEGY=standard

# Liquidity Configuration
MIN_LIQUIDITY_AMOUNT=10
MAX_LIQUIDITY_AMOUNT=10000
AUTO_COMPOUND_ENABLED=true
COMPOUND_THRESHOLD=100

# Security Configuration
CORS_ORIGIN=https://bsc-dex.com
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true
IP_WHITELIST_ENABLED=false
BLACKLIST_ENABLED=true

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
BODY_LIMIT=10mb
REQUEST_TIMEOUT=30000

# Development/Testing (disable in production)
DEBUG_MODE=false
MOCK_BLOCKCHAIN=false
SKIP_RATE_LIMIT=false
ENABLE_CORS_DEBUG=false

# Feature Flags
FEATURE_V3_POOLS=true
FEATURE_LIMIT_ORDERS=true
FEATURE_TRADING_BOTS=true
FEATURE_AUTO_COMPOUND=true
FEATURE_YIELD_FARMING=true
FEATURE_PORTFOLIO_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_MOBILE_NOTIFICATIONS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bsc-dex-backups
BACKUP_S3_REGION=us-east-1

# SSL Certificate Configuration
SSL_CERT_PATH=/etc/nginx/ssl/bsc-dex.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/bsc-dex.com.key
SSL_CA_BUNDLE_PATH=/etc/nginx/ssl/bsc-dex.com.ca-bundle
SSL_RENEWAL_EMAIL=admin@bsc-dex.com

# API Configuration
API_PREFIX=/api
API_VERSION=v1
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
API_RATE_LIMIT_ENABLED=true

# WebSocket Configuration
WS_ENABLED=true
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10000

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN
AMPLITUDE_API_KEY=YOUR_AMPLITUDE_API_KEY