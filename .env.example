# =============================================================================
# MoonEx DEX Backend Environment Configuration
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# =============================================================================
# Database Configuration (Required)
# =============================================================================
# Use SQLite for development (simpler setup)
DATABASE_URL="file:./db/moonex_dev.db"

# =============================================================================
# BSC (Binance Smart Chain) Configuration (Required for PancakeSwap)
# =============================================================================
# BSC Network Configuration
BSC_CHAIN_ID=56
BSC_RPC_URL_PRIMARY=https://bsc-dataseed1.binance.org/
BSC_RPC_URL_FALLBACK_1=https://bsc-dataseed2.binance.org/
BSC_RPC_URL_FALLBACK_2=https://bsc-dataseed3.binance.org/
BSC_RPC_URL_TESTNET=https://data-seed-prebsc-1-s1.binance.org:8545/

# BSC Block Explorer URLs
BSC_EXPLORER_URL=https://bscscan.com
BSC_TESTNET_EXPLORER_URL=https://testnet.bscscan.com

# BSC Gas Configuration (optimized for low-cost BSC transactions)
BSC_MAX_GAS_PRICE=10
BSC_DEFAULT_GAS_LIMIT=210000
BSC_GAS_MULTIPLIER=1.1

# PancakeSwap Contract Addresses (BSC Mainnet)
PANCAKESWAP_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E
PANCAKESWAP_FACTORY=0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73
PANCAKESWAP_MASTER_CHEF=0x73feaa1eE314F8c655E354234017bE2193C9E24E
WBNB_ADDRESS=0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c

# PancakeSwap API Endpoints
PANCAKESWAP_SUBGRAPH=https://api.thegraph.com/subgraphs/name/pancakeswap/exchange
PANCAKESWAP_API_V2=https://api.pancakeswap.info/api/v2

# BSC Cache Configuration (Redis for BSC data)
REDIS_URL=redis://localhost:6379
CACHE_TTL_TOKENS=300
CACHE_TTL_PRICES=30
CACHE_TTL_POOLS=120

# BSC Security Configuration
BSC_TRANSACTION_TIMEOUT=30000
BSC_MAX_RETRIES=3
BSC_CONFIRMATION_BLOCKS=1
BSC_SLIPPAGE_TOLERANCE=2

# =============================================================================
# Privy Authentication & Wallet Configuration (Required)
# =============================================================================
# Get these values from your Privy dashboard at https://dashboard.privy.io
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Optional: Custom Privy API URLs (defaults provided)
PRIVY_WALLET_API_URL=https://api.privy.io
PRIVY_AUTH_API_URL=https://auth.privy.io

# =============================================================================
# JWT Configuration (Required)
# =============================================================================
# Secret for signing JWT tokens - use a strong, random string in production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# =============================================================================
# Blockchain Configuration (Optional)
# =============================================================================
# Default blockchain network for operations
DEFAULT_CHAIN_ID=1
DEFAULT_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# =============================================================================
# DEX Configuration (Optional)
# =============================================================================
# Uniswap V2 Router contract address (Ethereum Mainnet)
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# Factory contract address (if custom implementation)
FACTORY_ADDRESS=0x0000000000000000000000000000000000000000

# Gas price configuration
GAS_PRICE_WEI=20000000000
MAX_GAS_LIMIT=500000

# =============================================================================
# Governance Configuration (Optional)
# =============================================================================
# Governance token contract address
GOVERNANCE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
GOVERNANCE_TOKEN_SYMBOL=MOON
GOVERNANCE_TOKEN_DECIMALS=18

# Quorum and voting thresholds
QUORUM_PERCENTAGE=4
APPROVAL_THRESHOLD_PERCENTAGE=51
VOTING_PERIOD_DAYS=7

# =============================================================================
# Security Configuration (Optional)
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# Monitoring & Logging (Optional)
# =============================================================================
# Log level: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Error tracking (e.g., Sentry)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Development Configuration (Optional)
# =============================================================================
# Enable debug mode for additional logging
DEBUG=false

# Enable hot reload in development
ENABLE_HOT_RELOAD=true

# Mock external services in development
MOCK_BLOCKCHAIN_SERVICES=false
MOCK_PRIVY_SERVICES=false

# =============================================================================
# Production Configuration (Optional)
# =============================================================================
# Redis configuration for session storage
REDIS_URL=redis://localhost:6379

# CDN configuration
CDN_URL=https://cdn.moonex.com

# Analytics and monitoring
ANALYTICS_API_KEY=your_analytics_key_here

# =============================================================================
# Cross-Chain Bridge Configuration (Optional)
# =============================================================================
# LayerZero configuration
LAYERZERO_ENDPOINT=0x0000000000000000000000000000000000000000

# Wormhole configuration
WORMHOLE_RPC_URL=https://api.wormhole.com/v1

# =============================================================================
# Advanced Configuration (Optional)
# =============================================================================
# Feature flags
ENABLE_GOVERNANCE=true
ENABLE_YIELD_FARMING=true
ENABLE_ADVANCED_TRADING=true
ENABLE_CROSS_CHAIN_BRIDGE=false

# Performance tuning
MAX_CONCURRENT_TRANSACTIONS=10
TRANSACTION_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300

# External service timeouts
EXTERNAL_API_TIMEOUT_MS=10000
BLOCKCHAIN_API_TIMEOUT_MS=15000