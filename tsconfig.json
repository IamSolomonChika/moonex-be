{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noResolve": false,
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "src/docs/api-documentation-generator.ts",
    "src/bsc-temporarily-excluded/",
    "src/routes/bsc-temporarily-excluded/",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/tests/**/*",
    "src/types/viem.ts",
    "src/bsc/**/*",  // Exclude all BSC complex files temporarily for production readiness
    "src/routes/yield.ts", // Temporarily exclude complex yield routes
    "src/monitoring/**/*",
    "src/docs/developer/**/*",
    "src/docs/processes/**/*"
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
